    <!-- Masthead -->
    <header class="masthead">
       
        
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">

                <div class="col-lg-10 align-self-end">

                    <h1 class="text-uppercase text-white font-weight-bold">Rendimiento energetico y energias renovables</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-black-50 font-weight-light mb-5">Optimizar el uso de la energia ya no es solo una opcion, es nuestra unica opcion!</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Quiero saber mas!</a>

                </div>
                <div class="col-lg-8 align-self-baseline">
                    <img src="~/img/Logo.png" height="200" width="400">
                </div>
            </div>
    </header>


    <!-- About Section -->
    <section class="page-section bg-primary" id="about">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">Pasion por lo Green!</h2>
                    <hr class="divider light my-4">
                    <p class="text-white-50 mb-4">Brindamos el servicio completo para la eficiencia energetica, desde la auditoria hasta la instalacion de  energias renovables</p>
                    <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Quiero ser parte!</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="page-section" id="services">
        <div class="container">
            <h2 class="text-center mt-0">Siempre a tu servicio!</h2>
            <hr class="divider my-4">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-tree text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Pensamos en Green</h3>
                        <p class="text-muted mb-0">Gran catalogo de productos para instalar energias renovables </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-toolbox text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Somos especialistas</h3>
                        <p class="text-muted mb-0">Nuestros tecnicos estaran a tu lado en todo el proceso</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-lightbulb text-primary mb-4"></i>
                        <h3 class="h4 mb-2">La mejor auditoria</h3>
                        <p class="text-muted mb-0">Con pequeños cambios podemos ahorrar a lo grande</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-heart text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Somos green</h3>
                        <p class="text-muted mb-0">Amamos lo que hacemos y trasmitimos ese amor!!!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

